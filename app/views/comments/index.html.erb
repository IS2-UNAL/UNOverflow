<p id="notice"><%= notice %></p>

<h1>Comments</h1>

<table>
  <thead>
    <tr>
      <th>Answer</th>
      <th>Post</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td><%= comment.answer %></td>
        <td><%= comment.post %></td>
        <td><%= comment.user %></td>
        <td><%= link_to t('.show'), comment %></td>
        <td><%= link_to t('.edit'), edit_comment_path(comment) %></td>
        <td><%= link_to t('.destroy'), comment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Comment', new_comment_path %>
