<%= tinymce_assets %>
<%= form_for(post) do |f| %>
  <% if post.errors.any? %>
    <div class="alert alert-danger alert-dismissible fade-in" id="alet-app" role="alert">
      <button type="button" class="close" aria-label="Close" data-dismiss="alert">
        <span>&times;</span>
      </button>
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :title, :for=>"titleField" %>
    <%= f.text_field :title, :id=>"titleField", :class=>"form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :description, :for=>"descriptionField" %>
    <%= f.text_area :description, rows: "10", :id=>"descriptionField", :class=>"form-control tinymce" %>
  </div>
  <% if !post.images.empty? %>
    <% post.images.each do |image| %>
      <div class="col-xs-6 col-sm-6 col-lg-4">
        <img src="<%= image.image.url %>" class="img-thumbnail" alt="Cinque Terre" width="100" height="100">
        <%= check_box_tag 'image_ids[]', image.id %>
      </div>
    <% end %>
  <% end %>
  <div class="col-xs-12">
    <div class="checkbox">
      <label><%= f.check_box :is_solved %> Is the post solved?</label>
    </div>
  </div>

  <div class="col-xs-12">
    <%= f.submit "Update", :class=>"btn btn-success"%>
  </div>
<% end %>
<br>
<%= tinymce %>
