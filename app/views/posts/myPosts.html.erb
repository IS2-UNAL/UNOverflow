<div class="page-header">
  <% if user_signed_in? %>
      <%= link_to "New",new_post_path, :class=>"btn btn-success pull-right" %>
  <% end %>
  <h2>My Posts</h2>
</div>
<%= form_tag search_posts_path, :method=>"get", :id=>"post_search", remote: true  do %>
  <div class="form-group">
    <%= text_field_tag :searchPost, nil, class:"form-control", placeholder: 'Enter the name of the post'%>
  </div>
<% end %>
<div id="posts">
  <%= render 'posts' %>
</div>
<div id="paginate">
  <%= render 'paginate' %>
</div>
