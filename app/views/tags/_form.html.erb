<%= form_for(tag) do |f| %>
  <% if @tag.errors.any? %>
    <div class="alert alert-dismissible alert-danger fade-in" id="alert-app" role="alert">
      <button type="button" class="close" aria-label="Close" data-dismiss="alert">
        <span>&times;</span>
      </button>
      <h2><%= pluralize(@tag.errors.count, "error") %> prohibited this tag from being saved:</h2>
      <ul>
      <% @tag.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
    <%= f.label :title, :for=>"titleField" %>
    <%= f.text_field :title, :class=>"form-control", :id=>"titleField" %>
  </div>

  <div class="form-group">
    <%= f.label :description, :for=>"descriptionField" %>
    <%= f.text_area :description, :class=>"form-control",  rows: "10",  :id=>"descriptionField" %>
  </div>

  <%= f.submit t('.add'), :class=>"btn btn-success" %>

<% end %>
